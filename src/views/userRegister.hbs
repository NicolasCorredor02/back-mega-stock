<div class="flex items-center justify-center h-full w-full gap-8 p-6">
    <div class="flex flex-col justify-between min-h-1/3 bg-white p-6 rounded-lg shadow-lg">
        <h2 class="text-3xl font-bold mb-6 text-center">Register</h2>
        <form method="post" id="userRegisterForm" class="space-y-6">
            <fieldset>
                <legend class="text-xl font-semibold mb-4">Image Profile</legend>
                <input type="file" accept=".jpg,.png,.webp" id="userProfileImage">
            </fieldset>
            <fieldset>
                <legend class="text-xl font-semibold mb-4">Personal Information</legend>
                <div class="space-y-4">
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700" for="userFirstName">First name</label>
                            <input class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" id="userFirstName" type="text" maxlength="50" required>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700" for="userLastName">Last name</label>
                            <input class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" id="userLastName" type="text" maxlength="50" required>
                        </div>
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium text-gray-700" for="userPhone">Phone number</label>
                            <input class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" id="userPhone" type="text" maxlength="13" required>
                        </div>
                        <div>
                            <label class="block text-sm font-medium text-gray-700" for="userIdNumber">DNI</label>
                            <input class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" id="userIdNumber" type="number" min="0" required>
                        </div>
                    </div>
                </div>
            </fieldset>
            <fieldset>
                <legend class="text-xl font-semibold mb-4">Account Information</legend>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700" for="userEmail">Email</label>
                        <input class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" id="userEmail" type="email" required>  
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700" for="userPassword">Password</label>
                        <input class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" id="userPassword" type="password" required>  
                    </div>
                </div>
            </fieldset>
            <button type="button" onclick="registerUserSubmit()" class="w-full bg-indigo-600 text-center text-indigo-50 rounded-md md:p-2 cursor-pointer">Register</button>
        </form>
        <a href="/api/user" class="w-fit text-gray-400 mt-5 mx-auto">Login</a>
    </div>
</div>